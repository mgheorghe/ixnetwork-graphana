docker run \
  --net ixn_br \
  --ip 192.168.57.11 \
  --hostname ixnetwork \
  --name ixnetwork \
  --privileged \
  --restart=always \
  --cap-add=SYS_ADMIN \
  --cap-add=SYS_TIME \
  --cap-add=NET_ADMIN \
  --cap-add=SYS_PTRACE \
